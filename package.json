{
  "name": "alo",
  "version": "2.4.1",
  "description": "A minimalist approach to javascript state management",
  "main": "main/alo.full.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha",
    "test-travis": "./node_modules/istanbul/lib/cli.js cover ./node_modules/.bin/mocha -- -R spec ./test/*",
    "test-watch": "./node_modules/.bin/mocha --watch",
    "build": "npm run build:main && npm run build:min",
    "build:readme": "node ./build/readme.js",
    "build:main": "./node_modules/.bin/webpack",
    "build:min": "npm run build:min:core && npm run build:min:full",
    "build:min:core": "./node_modules/.bin/uglifyjs ./dist/alo.js -c -m -o ./dist/alo.min.js --source-map ./dist/alo.min.js.map && npm run build:min:core:dev",
    "build:min:core:dev": "./node_modules/.bin/uglifyjs ./dist/alo.dev.js -c -m -o ./dist/alo.dev.min.js --source-map ./dist/alo.dev.min.js.map",
    "build:min:full": "./node_modules/.bin/uglifyjs ./dist/alo.full.js -c -m -o ./dist/alo.full.min.js --source-map ./dist/alo.full.min.js.map && npm run build:min:full:dev",
    "build:min:full:dev": "./node_modules/.bin/uglifyjs ./dist/alo.full.dev.js -c -m -o ./dist/alo.full.dev.min.js --source-map ./dist/alo.full.dev.min.js.map",
    "dev-server": "./node_modules/.bin/webpack-dev-server",
    "version": "npm run build:readme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alojs/alo.git"
  },
  "keywords": [
    "minimalist",
    "javascript",
    "state",
    "management",
    "library"
  ],
  "author": {
    "name": "Katja Lutz",
    "email": "",
    "url": "https://github.com/katywings"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alojs/alo/issues"
  },
  "homepage": "http://www.alojs.com",
  "dependencies": {
    "flyd": "^0.2.2",
    "lodash": "^4.17.2",
    "polymorphic": "^1.4.0",
    "yaku": "^0.17.3"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "flow-bin": "^0.37.0",
    "flow-typed": "^2.0.0",
    "fs-extra": "^1.0.0",
    "ink-docstrap": "^1.3.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.3",
    "jsdoc-webpack-plugin": "0.0.1",
    "mocha": "^3.2.0",
    "mocha-standard": "^1.0.0",
    "remove-flow-types-loader": "0.0.1",
    "standard": "^8.6.0",
    "standard-format": "^2.2.4",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-node-externals": "^1.5.4"
  }
}

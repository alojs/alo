{
  "name": "alo",
  "version": "0.2.0",
  "description": "A minimalist approach to javascript state management",
  "main": "src/main/alo.js",
  "scripts": {
    "test": "mocha-webpack",
    "test-watch": "mocha-webpack --watch",
    "build": "npm run build:main && npm run build:min",
    "build:main": "./node_modules/.bin/webpack",
    "build:min": "npm run build:min:core && npm run build:min:full",
    "build:min:core": "./node_modules/.bin/uglifyjs ./dist/alo.js -c -m -o ./dist/alo.min.js --source-map ./dist/alo.min.js.map",
    "build:min:full": "./node_modules/.bin/uglifyjs ./dist/alo.full.js -c -m -o ./dist/alo.full.min.js --source-map ./dist/alo.full.min.js.map",
    "dev-server": "./node_modules/.bin/webpack-dev-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alojs/alo.git"
  },
  "keywords": [
    "minimalist",
    "javascript",
    "state",
    "management",
    "library"
  ],
  "author": {
    "name": "Katja Lutz",
    "email": "",
    "url": "https://github.com/katywings"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alojs/alo/issues"
  },
  "homepage": "https://github.com/alojs/alo#readme",
  "devDependencies": {
    "flyd": "^0.2.2",
    "fs-extra": "^0.30.0",
    "ink-docstrap": "^1.3.0",
    "jsdoc": "^3.4.2",
    "jsdoc-webpack-plugin": "0.0.1",
    "lodash": "^4.17.2",
    "mocha": "^3.1.2",
    "mocha-webpack": "^0.7.0",
    "polymorphic": "^1.4.0",
    "standard": "^8.5.0",
    "standard-format": "^2.2.3",
    "uglify-js": "^2.7.3",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2",
    "webpack-node-externals": "^1.5.4"
  }
}

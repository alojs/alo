{
  "name": "alo",
  "version": "2.6.0",
  "description": "A minimalist approach to javascript state management",
  "main": "dist/alo.full.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --reporter list",
    "test-nyc": "./node_modules/.bin/nyc --require babel-core/register ./node_modules/.bin/mocha",
    "coverage-nyc": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls",
    "test-watch": "./node_modules/.bin/mocha --watch --reporter min",
    "flow": "flow-watch",
    "build": "npm run build:main && npm run build:min && npm run build:docs",
    "build:readme": "node ./build/readme.js",
    "build:docs": "./node_modules/.bin/documentation build lib/** --shallow --github -f html -o docs/api",
    "build:main": "./node_modules/.bin/webpack",
    "build:min": "npm run build:min:core && npm run build:min:full",
    "build:min:core": "./node_modules/.bin/uglifyjs ./dist/alo.js -c -m -o ./dist/alo.min.js --source-map ./dist/alo.min.js.map && npm run build:min:core:dev",
    "build:min:core:dev": "./node_modules/.bin/uglifyjs ./dist/alo.dev.js -c -m -o ./dist/alo.dev.min.js --source-map ./dist/alo.dev.min.js.map",
    "build:min:full": "./node_modules/.bin/uglifyjs ./dist/alo.full.js -c -m -o ./dist/alo.full.min.js --source-map ./dist/alo.full.min.js.map && npm run build:min:full:dev",
    "build:min:full:dev": "./node_modules/.bin/uglifyjs ./dist/alo.full.dev.js -c -m -o ./dist/alo.full.dev.min.js --source-map ./dist/alo.full.dev.min.js.map",
    "dev-server": "./node_modules/.bin/webpack-dev-server",
    "version": "npm run build:readme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alojs/alo.git"
  },
  "keywords": [
    "minimalist",
    "javascript",
    "state",
    "management",
    "library"
  ],
  "author": {
    "name": "Katja Lutz",
    "email": "",
    "url": "https://github.com/katywings"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alojs/alo/issues"
  },
  "homepage": "http://www.alojs.com",
  "dependencies": {
    "flyd": "^0.2.2",
    "lodash": "^4.17.2",
    "next-tick": "^1.0.0",
    "polymorphic": "^1.4.0",
    "yaku": "^0.17.4"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-preset-es2015": "^6.18.0",
    "coveralls": "^2.11.15",
    "documentation": "^4.0.0-beta17",
    "documentation-loader": "^0.1.1-beta",
    "eslint": "^3.12.2",
    "eslint-plugin-flowtype": "^2.29.1",
    "flow-bin": "^0.37.4",
    "flow-typed": "^2.0.0",
    "flow-watch": "^1.1.0",
    "fs-extra": "^1.0.0",
    "mocha": "^3.2.0",
    "mocha-standard": "^1.0.0",
    "nyc": "^10.0.0",
    "standard": "^8.6.0",
    "uglify-js": "^2.7.5",
    "webpack": "^2.2.0-rc.1",
    "webpack-dev-server": "^2.2.0-rc.0",
    "webpack-node-externals": "^1.5.4"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}

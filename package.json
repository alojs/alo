{
  "name": "alo",
  "version": "2.8.3",
  "description": "Full-fledged state management",
  "main": "dist/alo.full.js",
  "scripts": {
    "test": "./node_modules/.bin/ava",
    "test-nyc": "./node_modules/.bin/nyc ava",
    "coverage-nyc": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls",
    "test-watch": "./node_modules/.bin/ava --watch",
    "flow": "flow-watch",
    "build": "npm run build:main && npm run build:min && npm run build:docs",
    "build:readme": "node ./build/readme.js",
    "build:docs": "./node_modules/.bin/documentation build lib/** --shallow --github -f html -o docs/api",
    "build:main": "npm run build:main:core && npm run build:main:full",
    "build:main:core": "./node_modules/.bin/rollup -c ./rollup.config.js -o ./dist/alo.js ./main/alo.js && npm run build:main:core:dev",
    "build:main:core:dev": "./node_modules/.bin/rollup -c -o ./dist/alo.dev.js ./main/alo.dev.js",
    "build:main:full": "./node_modules/.bin/rollup -c -o ./dist/alo.full.js ./main/alo.full.js && npm run build:main:full:dev",
    "build:main:full:dev": "./node_modules/.bin/rollup -c -o ./dist/alo.full.dev.js ./main/alo.full.dev.js",
    "build:min": "npm run build:min:core && npm run build:min:full",
    "build:min:core": "./node_modules/.bin/uglifyjs ./dist/alo.js -c -m --keep-fnames -o ./dist/alo.min.js --source-map ./dist/alo.min.js.map && npm run build:min:core:dev",
    "build:min:core:dev": "./node_modules/.bin/uglifyjs ./dist/alo.dev.js -c -m --keep-fnames -o ./dist/alo.dev.min.js --source-map ./dist/alo.dev.min.js.map",
    "build:min:full": "./node_modules/.bin/uglifyjs ./dist/alo.full.js -c -m --keep-fnames -o ./dist/alo.full.min.js --source-map ./dist/alo.full.min.js.map && npm run build:min:full:dev",
    "build:min:full:dev": "./node_modules/.bin/uglifyjs ./dist/alo.full.dev.js -c -m --keep-fnames -o ./dist/alo.full.dev.min.js --source-map ./dist/alo.full.dev.min.js.map",
    "dev-server": "TODO :)",
    "version": "npm run build:readme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alojs/alo.git"
  },
  "keywords": [
    "javascript",
    "state",
    "management",
    "library"
  ],
  "author": {
    "name": "Katja Lutz",
    "email": "",
    "url": "https://github.com/katywings"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alojs/alo/issues"
  },
  "homepage": "http://www.alojs.com",
  "dependencies": {
    "flyd": "^0.2.4",
    "lodash": "^4.17.4",
    "next-tick": "^1.0.0",
    "polymorphic": "^1.4.0",
    "yaku": "^0.17.8"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "buble": "^0.15.2",
    "coveralls": "^2.11.15",
    "documentation": "^4.0.0-beta17",
    "documentation-loader": "^0.1.1-beta",
    "eslint": "^3.14.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "flow-bin": "^0.45.0",
    "flow-remove-types": "^1.2.0",
    "flow-typed": "^2.0.0",
    "flow-watch": "^1.1.0",
    "fs-extra": "^2.0.0",
    "mocha-standard": "^1.0.0",
    "nyc": "^10.1.2",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "standard": "^10.0.0",
    "uglify-js": "^2.7.5"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "ava": {
    "modules": true,
    "babel": {
      "sourceMaps": "inline",
      "plugins": [
        "transform-es2015-modules-commonjs",
        "transform-flow-strip-types"
      ]
    },
    "require": [
      "buble/register"
    ]
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
